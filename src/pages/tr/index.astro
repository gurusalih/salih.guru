---
import Layout from '../../layouts/Layout.astro';
import ProductSection from '../../components/ProductSection.astro';
import About from '../../components/About.astro';
import SocialLinks from '../../components/SocialLinks.astro';
import { pastProducts, currentProducts, collaboratedProducts } from '../../data/products';
import { useTranslations } from '../../i18n/utils';
const t = useTranslations('tr');
---
<Layout title="Salih.Guru - Girişimci & Ürün Geliştiricisi">
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <p class="hero-greeting">{t('hero.greeting')} <span class="name">Salih</span></p>
        <h1>{t('hero.title')}</h1>
        <p class="hero-subtitle">{t('hero.subtitle')}</p>
        <a href="#about" class="cta-button">{t('hero.cta')}</a>
      </div>
    </div>
    <div class="hero-decoration"></div>
  </section>
  <About />
  <ProductSection 
    id="current"
    title={t('section.current')}
    description={t('section.current.desc')}
    products={currentProducts}
  />
  <ProductSection 
    id="past"
    title={t('section.past')}
    description={t('section.past.desc')}
    products={pastProducts}
  />
  <ProductSection 
    id="collaborated"
    title={t('section.collaborated')}
    description={t('section.collaborated.desc')}
    products={collaboratedProducts}
  />
  <SocialLinks />
</Layout>
<style>
  .hero {
    padding: calc(var(--spacing-xl) * 1.5) 0 var(--spacing-xl);
    background: linear-gradient(180deg, var(--color-card) 0%, var(--color-bg) 100%);
    position: relative;
    overflow: hidden;
  }
  .hero-decoration {
    position: absolute;
    top: 10%;
    right: 5%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    animation: float 20s ease-in-out infinite;
    pointer-events: none;
  }
  @keyframes float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -30px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
  }
  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }
  .hero-greeting {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-sm);
    animation: fadeInUp 0.6s ease-out;
  }
  .name {
    color: var(--color-accent);
    font-weight: 700;
  }
  .hero h1 {
    background: linear-gradient(135deg, var(--color-text) 0%, var(--color-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-md);
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }
  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-light);
    line-height: 1.8;
    margin-bottom: var(--spacing-md);
    animation: fadeInUp 0.6s ease-out 0.4s both;
  }
  .cta-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-hover) 100%);
    color: #ffffff;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.05rem;
    transition: var(--transition);
    box-shadow: 0 4px 14px rgba(99, 102, 241, 0.4);
    animation: fadeInUp 0.6s ease-out 0.6s both;
    position: relative;
    overflow: hidden;
  }
  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }
  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(99, 102, 241, 0.6);
  }
  .cta-button:hover::before {
    left: 100%;
  }
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @media (max-width: 768px) {
    .hero {
      padding: var(--spacing-lg) 0;
    }
    .hero-greeting {
      font-size: 1rem;
    }
    .hero-subtitle {
      font-size: 1.1rem;
    }
    .cta-button {
      padding: 0.875rem 2rem;
      font-size: 1rem;
    }
  }
</style>

